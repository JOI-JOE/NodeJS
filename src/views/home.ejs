<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    
    <div style="padding-left: 16px">
        <h2>List User</h2>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Email</th>
              <th>Name</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <h1><%= hau %></h1>
          <% for(let i=0; i<dataUser.length; i++) { %>
            <tr>
              <td><%= dataUser[i].id %></td>
              <td><%= dataUser[i].email %></td>
              <td><%= dataUser[i].name %></td>
              <td><%= dataUser[i].city %></td>
              <td>
                  <a href="/detail/user/<%= dataUser[i].id %>">Detail</a>
                  <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                    <button type="submit">Edit</button>
                  </form>
                  <form action="/delete-user" method="POST">
                    <input type="hidden" name="usesId" value="<%= dataUser[i].id %>">
                    <button href="submit">Delete</button>
                  </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    <h2>HTML Forms</h2>

    <div style="padding-left: 16px">

    <form action="/create-new-user" method="POST">
    <label for="myname">Name:</label><br>
    <input type="text" id="name" name="name" ><br>
    <label for="email">Email:</label><br>
    <input type="text" id="email" name="email" ><br><br>
    <label for="city">City:</label><br>
    <input type="text" id="city" name="city" ><br><br>
    <button type="submit">Submit</button>
    </form> 
    </div>

  </body>
</html>
